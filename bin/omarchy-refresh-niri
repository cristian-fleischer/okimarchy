#!/bin/bash

# Refresh niri configuration
if command -v niri >/dev/null && pgrep -x niri >/dev/null 2>&1; then
    echo "üîÑ Refreshing niri configuration..."
    if niri msg action reload-config 2>/dev/null; then
        echo "‚úÖ Niri configuration reloaded successfully"
    else
        echo "‚ö†Ô∏è  Failed to reload niri configuration"
        exit 1
    fi
else
    echo "‚ùå Niri is not running"
    exit 1
fi
